{
  "name": "sqlite-napi",
  "version": "1.0.0",
  "description": "High-performance SQLite library for Node.js and Bun that mirrors the bun:sqlite API",
  "keywords": [
    "sqlite",
    "napi",
    "node-addon",
    "native",
    "rust",
    "bun",
    "database"
  ],
  "homepage": "https://github.com/nglmercer/sqlite-napi#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nglmercer/sqlite-napi.git"
  },
  "bugs": {
    "url": "https://github.com/nglmercer/sqlite-napi/issues"
  },
  "license": "MIT",
  "author": {
    "name": "nglmercer",
    "email": "nglmercer@gmail.com"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "clean": "napi clean && cargo clean",
    "test": "bun test",
    "dev": "bun run --watch examples/dev.ts",
    "type-check": "tsc --noEmit",
    "format": "bun run --filter ./examples --filter ./scripts format",
    "lint": "rustup run stable cargo clippy -- -D warnings"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1",
    "@types/bun": "^1.1.12",
    "tsx": "^4.21.0",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "napi": {
    "binaryName": "sqlite-napi",
    "targets": [
      "x86_64-pc-windows-msvc",
      "i686-pc-windows-msvc",
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu"
    ]
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
